        <dependency id="Newtonsoft.Json" version="8.0.2" />
        <dependency id="Xam.Plugin.BLE" version="0.9.4" />
      </group>
      <group targetFramework="Xamarin.iOS">
        <dependency id="MvvmCross.Platform" version="4.1.0" />
        <dependency id="Newtonsoft.Json" version="8.0.2" />
